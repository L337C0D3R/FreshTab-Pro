{
    "manifest_version": 2,
    "name": "Clear Storage and Cookies",
    "version": "1.0",
    "icons": {
        "16": "/assets/icon16.png",
        "48": "/assets/icon48.png",
        "128": "/assets/icon128.png"
    },
    "permissions": [
        "activeTab",
        "cookies",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Clear Storage and Cookies",
        "default_popup": "popup.html"
    }
}